<div class="mx-auto md:w-2/3 w-full">
    <h2 class= "font-bold text-4xl">Registro</h2><br />
  <%= form_with(model: @user) do |form| %>
    <% @user.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>

    <div>
      <%= form.label :email %><br />
      <%= form.email_field :email, require: true %>
    </div>

    <div>
      <%= form.label :username %><br />
      <%= form.text_field :username, require: true  %>
    </div>

    <div>
      <%= form.label :password %><br />
      <%= form.password_field :password, require: true  %>
    </div><br />

    <button class="inline-block font-medium  rounded-full py-3 px-5 bg-teal-400 text-black block  hover:text-red-600 mx-2 ">
      <%= form.submit %>
    </button>
  <% end %>
