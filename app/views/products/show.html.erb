<div class="my-5">
  <%= render partial: 'products/product_details', locals: { product: @product } %>
  <% if @product.owner?%>
    <button class= "inline-block font-medium  rounded-full py-3 px-5 bg-teal-400 text-black block  hover:text-blue-400 mx-2 ">
    <%= link_to t('.edit'), edit_product_path(@product)  %>
    </button>

    <button class= "inline-block font-medium  rounded-full py-3 px-5 bg-teal-400 text-black block  hover:text-red-600 mx-2 ">
    <%= link_to t('.delete'), product_path(@product), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm'),
      class: ""
        } %>
    </button><br>
  <% end %>

  <button class= "inline-block font-medium  rounded-full py-3 px-5 bg-teal-400 text-black block  hover:text-red-600 mx-2 ">
    <%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username)%>
  </button>
  <%= turbo_stream_from @product %>
</div>