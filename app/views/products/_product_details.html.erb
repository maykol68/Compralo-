<div id="<%= dom_id(product) %>" class="my-5">
  <%= image_tag product.photo, width: 500 if product.photo.attached? %>
  <%= render partial: 'favorite', locals: { product: @product } %>
 <p class="font-bold text-2xl">
    <%= product.title %>
  </p>

  <p class="my-5">
   <h1 class='description'><%= product.description %></h1>
  </p>
   
  <p class="my-5">
    <span class='price'><%= product.price %>$</span>
  </p>
  
</div>